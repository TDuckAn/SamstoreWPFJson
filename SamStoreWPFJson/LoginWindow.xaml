<Window x:Class="SamStoreWPFJson.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamStoreWPFJson"
        mc:Ignorable="d"
        Title="PE60602024 Login Window" Height="600" Width="800" FontFamily="Arial" FontSize="13" Background="#EDD5D3" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Sam Store Management System" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24"/>
        <Label Content="Email" FontFamily="Arial Narrow" HorizontalAlignment="Left" Margin="77,145,0,0" VerticalAlignment="Top" FontSize="16" Foreground="Blue"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="165,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="487" FontSize="16" TextAlignment="Left" Text="superadmin@sam.com"/>
        <Label Content="Password" FontFamily="Arial Narrow" HorizontalAlignment="Left" Margin="65,204,0,0" VerticalAlignment="Top" FontSize="16" Foreground="Blue"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="165,210,0,0" VerticalAlignment="Top" Width="487" FontSize="16" Password="234@"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="239,292,0,0" VerticalAlignment="Top" Height="45" Width="99" Click="btnLogin_Click"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Margin="488,292,0,0" VerticalAlignment="Top" Height="45" Width="99" Click="btnClose_Click"/>

    </Grid>
</Window>
