<Window x:Class="SamStoreWPFJson.OrderManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamStoreWPFJson"
        mc:Ignorable="d"
        Title="PE60602024 Order Management Window" Height="600" Width="800" FontFamily="Arial" FontSize="13" Background="#FAABA5" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Label Content="PreOrderID" HorizontalAlignment="Left" Margin="16,-2,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="13pt" Foreground="Blue"/>
        <TextBox x:Name="txtPreOrderID" HorizontalAlignment="Left" Margin="148,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="13pt" TextAlignment="Left" Foreground="Blue"/>
        <Label Content="PreOrderNo" HorizontalAlignment="Left" Margin="406,-2,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="13pt" Foreground="Blue"/>
        <TextBox x:Name="txtPreOrderNo" HorizontalAlignment="Left" Margin="557,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="13pt" TextAlignment="Left" Foreground="Blue"/>
        <Label Content="DepositAmount" HorizontalAlignment="Left" Margin="16,34,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="13pt" Foreground="Blue"/>
        <TextBox x:Name="txtDepositAmount" HorizontalAlignment="Left" Margin="148,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="13pt" TextAlignment="Left" Foreground="Blue"/>
        <Label Content="TotalAmount" HorizontalAlignment="Left" Margin="406,34,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="13pt" Foreground="Blue"/>
        <TextBox x:Name="txtTotalAmount" HorizontalAlignment="Left" Margin="557,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="13pt" TextAlignment="Left" Foreground="Blue"/>
        <Label Content="CustomerName" HorizontalAlignment="Left" Margin="16,70,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="13pt" Foreground="Blue"/>
        <TextBox x:Name="txtCustomerName" HorizontalAlignment="Left" Margin="148,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="13pt" TextAlignment="Left" Foreground="Blue"/>
        <Label Content="CustomerAddress" HorizontalAlignment="Left" Margin="406,70,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="13pt" Foreground="Blue"/>
        <TextBox x:Name="txtCustomerAddress" HorizontalAlignment="Left" Margin="557,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="13pt" TextAlignment="Left" Foreground="Blue"/>
        <Label Content="CustomerPhone" HorizontalAlignment="Left" Margin="16,106,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="13pt" Foreground="Blue"/>
        <TextBox x:Name="txtCustomerPhone" HorizontalAlignment="Left" Margin="148,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="13pt" TextAlignment="Left" Foreground="Blue"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="406,106,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="13pt" Foreground="Blue"/>
        <TextBox x:Name="txtStatus" HorizontalAlignment="Left" Margin="557,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="13pt" TextAlignment="Left" Foreground="Blue"/>
        <Label Content="Created At" HorizontalAlignment="Left" Margin="16,141,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="13pt" Foreground="Blue"/>
        <Label Content="Updated At" HorizontalAlignment="Left" Margin="406,141,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="13pt" Foreground="Blue"/>
        <Label Content="Product Name" HorizontalAlignment="Left" Margin="16,177,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="13pt" Foreground="Blue"/>
        <ComboBox x:Name="cbbProduct" HorizontalAlignment="Left" FontSize="13pt" Margin="148,179,0,0" VerticalAlignment="Top" Width="220"/>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Margin="16,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="672" FontSize="13pt" TextAlignment="Left" Foreground="Blue"/>
        <Button x:Name="btnSearch" Content="Search" FontSize="13pt" HorizontalAlignment="Left" Margin="693,211,0,0" VerticalAlignment="Top" Width="84" Click="btnSearch_Click"/>
        <DataGrid x:Name="dtgPreOrder" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,240,0,77" SelectionChanged="dtgPreOrder_SelectionChanged"/>
        <Button x:Name="btnAdd" Content="Add" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,507,0,0" VerticalAlignment="Top" Height="50" Width="100" Background="#FF3BC962" Click="btnAdd_Click"/>
        <Button x:Name="btnUpdate" Content="Update" FontWeight="Bold" HorizontalAlignment="Left" Margin="208,507,0,0" VerticalAlignment="Top" Height="50" Width="100" Background="#FF629FE6" Click="btnUpdate_Click"/>
        <Button x:Name="btnDelete" Content="Delete" FontWeight="Bold" HorizontalAlignment="Left" Margin="460,507,0,0" VerticalAlignment="Top" Height="50" Width="100" Background="#FFEB3953" Click="btnDelete_Click"/>
        <Button x:Name="btnReturn" Content="Return" FontWeight="Bold" HorizontalAlignment="Left" Margin="690,507,0,0" VerticalAlignment="Top" Height="50" Width="100" Background="#FFE8E173" Click="btnReturn_Click"/>
        <DatePicker x:Name="dpCreatedAt" HorizontalAlignment="Left" Margin="148,142,0,0" VerticalAlignment="Top" FontSize="13pt" Width="220"/>
        <DatePicker x:Name="dpUpdatedAt" HorizontalAlignment="Left" Margin="557,142,0,0" VerticalAlignment="Top" FontSize="13pt" Width="220"/>

    </Grid>
</Window>
